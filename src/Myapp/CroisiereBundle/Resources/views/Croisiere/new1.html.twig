{% extends '::template.html.twig' %}
{% block stepholder %}
<div id="step-holder">
			<div class="step-no">1</div>
			<div class="step-dark-left"><a href="">Add Croisiere </a></div>
			<div class="step-dark-right">&nbsp;</div>
			<div class="step-no-off">2</div>
			<div class="step-light-left">Add Bateau</div>
			<div class="step-light-right">&nbsp;</div>
			<div class="step-no-off">3</div>
			<div class="step-light-left">Add Cabine</div>
			<div class="step-light-round">&nbsp;</div>                      
			<div class="clear"></div>
		</div>
{% endblock %}
{% block form %}
    <h1>Croisiere creation</h1>
{{ form_start(form) }}

        <table border="0" cellpadding="0" cellspacing="0"  id="id-form">
        <tr>
        <th valign="top"> dateDepart </th>
        <td>   {{ form_widget(form.dateDepart,{'attr': {'class': 'inp-form'}})}}</td>
        <td></td>
        </tr>
        <tr>
        <th valign="top"> destination </th>
        <td>   {{ form_widget(form.destination,{'attr': {'class': 'inp-form'}})}}</td>
        <td></td>
        </tr>
        <tr>
        <th valign="top"> portsDedepart </th>
        <td>   {{ form_widget(form.portsDedepart,{'attr': {'class': 'inp-form'}})}}</td>
        <td></td>
        </tr>
        <tr>
        <th valign="top"> PrortsDarive </th>
        <td> {{ form_widget(form.PrortsDarive,{'attr': {'class': 'inp-form'}})}} </td>
        
        <td></td>
        </tr>
        
      
           
            
  <tr><td></td><td>     {{ form_widget(form.submit,{'attr': {'class': 'form-submit'}} )}}
      </td></tr>
        </table>
        {{form_end(form)}}

        <ul class="record_actions">
    <li>
        <a href="{{ path('croisiere') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
